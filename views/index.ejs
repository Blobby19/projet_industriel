<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="vendor/Materialize/dist/css/materialize.min.css">

  <title><%= title %></title>
</head>
<body>
  <header>
    <% include partials/header %>
  </header>

  <main>
    <div class="section no-pad-bot" id="index-banner">
      <div class="container">
        <h1 class="header center orange-text">Choisissez le type de CTA</h1>
      </div>
    </div>
    <div class="container">
      <div class="section">
        <div class="row">
         <div class="col s12 m6">
           <div class="card">
             <div class="card-image">
               <img src="images/sample-1.jpg">
               <span class="card-title">CTA Double Flux</span>
             </div>
             <div class="card-content">
               <p>Choisissez la CTA Double Flux</p>
             </div>
             <div class="card-action">
               <a href="#">Cliquez ici pour la CTA Double Flux</a>
             </div>
           </div>
         </div>
         <div class="col s12 m6">
           <div class="card">
             <div class="card-image">
               <img src="images/sample-1.jpg">
               <span class="card-title">CTA Simple Flux</span>
             </div>
             <div class="card-content">
               <p>Choisissez la CTA Simple Flux</p>
             </div>
             <div class="card-action">
               <a href="#">Cliquez ici pour la CTA Simple Flux</a>
             </div>
           </div>
         </div>
       </div>
      </div>
    </div>
  </main>

  <footer>
    <% include partials/footer %>
  </footer>

  <script src="vendor/jquery/dist/jquery.min.js" charset="utf-8"></script>
  <script src="vendor/Materialize/dist/js/materialize.min.js" charset="utf-8"></script>
  <script src="js/socket.io.js" charset="utf-8"></script>
  <script src="js/app.js" charset="utf-8"></script>
</body>
</html>
